<div class="container">

  <%= render partial: "shared/new_room_form" %>

  <div class="row">
    <div class="rooms">
      <table class="striped">
        <thead>
          <tr>
            <th data-field="name">Room Name</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= link_to room.name, room_path(room), class: "red-text text-lighten-1" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
